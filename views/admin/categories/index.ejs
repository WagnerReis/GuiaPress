<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
  <hr>
  <h2>Categorias</h2>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>Id</td>
        <td>Título</td>
        <td>Slug</td>
        <td>Ações</td>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
        <tr>
          <th><%= category.id %></th>
          <th><%= category.title %></th>
          <th><%= category.slug %></th>
          <th></th>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


